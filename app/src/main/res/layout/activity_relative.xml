<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorBlack"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:textSize="12sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="Button 5"
        android:id="@+id/btn_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_05"
        android:layout_marginRight="-24dp"
        android:layout_marginBottom="24dp"
        android:layout_toLeftOf="@id/btn_05"
        android:text="Button 3"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_05"
        android:layout_marginLeft="-24dp"
        android:layout_marginBottom="26dp"
        android:layout_toRightOf="@id/btn_05"
        android:text="Button 4"
        android:textSize="12sp" />
    <Button
        android:layout_marginRight="-24dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@id/btn_03"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/btn_03"
        android:id="@+id/btn_01"
        android:text="Button 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="-24dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@id/btn_04"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/btn_04"
        android:id="@+id/btn_02"
        android:text="Button 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>