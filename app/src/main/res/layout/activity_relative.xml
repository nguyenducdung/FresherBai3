<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorBlack"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:textSize="@dimen/text_size"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="@string/button_5"
        android:id="@+id/btn_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_05"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_toLeftOf="@id/btn_05"
        android:text="@string/button_3"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/btn_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_05"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_toRightOf="@id/btn_05"
        android:text="@string/button_4"
        android:textSize="@dimen/text_size" />
    <Button
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_above="@id/btn_03"
        android:textSize="@dimen/text_size"
        android:layout_toLeftOf="@id/btn_03"
        android:id="@+id/btn_01"
        android:text="@string/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_above="@id/btn_04"
        android:textSize="@dimen/text_size"
        android:layout_toRightOf="@+id/btn_04"
        android:id="@+id/btn_02"
        android:text="@string/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>